<h2>Pick a State's Special Burger or Make a Burger from Where you Live!</h2>

<ul>
 
  {{#each all}}
    {{#unless devoured}}
      <li>{{burger_name}}</li>
      <div><form class = "devourForm" value = {{id}}>
      <input type = "hidden" id = "burgersId" type = "text" value= {{id}}><br>
      <button type="submit" class="brn brn-warning" id= "devour">
        Devour!
       </button>
       </form></div>
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers to Try!</h2>

<ul>
  {{#each all}}
    {{#if devoured}}
  <li>{{burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Create a Burger</h2>

<form class="create-form" action = "/api/burgers" method = "POST">

  <div class="form-group">
      <label for="burgerName:">Burger Name:</label>
    <input type="text" class="form-control" id="burgerName" name="name">
  </div>

    <button type="submit" class="brn brn-warning" id= "submitB">Submit</button>
</form>
